<!doctype html>
<% include includes/template/signature.ejs %>
<html lang="en">

  <head>
    <% include includes/template/head.ejs %>
    <script src="/js/imageOverlay.js" type="text/javascript"></script>
  </head>

  <body id="<%= pageID %>">

    <header>
      <% include includes/template/header.ejs %>
    </header>

    <main>

      <% itemAll.forEach(function(item) { %>
      <article id="project-description">

        <section class="item-description left-column">
          <!-- item.shortname -->
          <h1 class="underline"><%= item.title %></h1>
          <div class="item-subhead">
            <div class="item-client">Client: <%= item.clientname %></div>
            <div class="item-date"><%- item.date %></div>
          </div>
          <%- item.description %>
          <hr>
          <div class="nav-post-description">
            <a href="/portfolio/" class="btn-txt">
              Return to Portfolio
            </a>
          </div>
        </section>

        <section class="right-column">
          <div class="img-parallax">
            <% item.images.forEach(function(subitem) { %>
            <figure class="img-slide overlayLink">
              <div class="aspect-ratio">
              <% if(subitem[1] === ".html") { %>
              <img data-src="<%= defaultResources %>/images/portfolio/js-thumbnail.png">
              <% } else if(subitem[1] === ".svg") { %>
              <img data-src="<%= defaultResources %>/images/portfolio/<%= subitem[0] %><%= subitem[1] %>">
              <% } else { %>
              <img data-src="<%= defaultResources %>/images/portfolio/<%= subitem[0] %>_tn<%= subitem[1] %>">
              <% } %>
            </div>
            </figure>
            <% }); %>
          </div>
          <div class="nav-post-gallery">
            <a href="/portfolio/">
              <button type="button" class="btn-std">
                Return to Portfolio
              </button>
            </a>
          </div>        
        </section>

      </article>

      <div class="img-overlay">
        <div class="img-overlay-box">
          <% item.images.forEach(function(subitem) { %>
            <% if(subitem[1] === ".html" || subitem[1] === ".js" || subitem[1] === ".css") { %>
          <iframe class="iframeSampleCode" src="<%= subitem[0] %><%= subitem[1] %>" scrolling="yes"></iframe> 
            <% } else { %>
          <img data-src="<%= defaultResources %>/images/portfolio/<%= subitem[0] %><%= subitem[1] %>">
            <% } %>
          <% }); %>
        </div>
        <div class="img-overlay-left">
          <div class="img-overlay-btns"><!-- left navigate -->&#10092;</div>
        </div>
        <div class="img-overlay-right">
          <div class="img-overlay-btns"><!-- right navigate -->&#10093;</div>
        </div>
        <div class="img-overlay-close img-overlay-btns">
          &#10005;
        </div>
      </div>
      <% }); %>

    </main>

    <% include includes/template/footer.ejs %>

  </body>

</html>